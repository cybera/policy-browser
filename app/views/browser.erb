<div class="row">
  <div class="col-md-4">
    <div class="row dropdown browser-navigation-style-dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <%= navigation.camelize %>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% NavigationHelper.registered_helpers.each do | nav_helper | %>
          <li><a href="/browser?navigation=<%= nav_helper.param_name %>&ppn=<%= ppn %>">
            <%= nav_helper.descriptive_name %>
          </a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>
<div class="row browser-main-content">
  <div class="col-md-4">
    <div class="row text-left">
      <%= render_navigation(navigation, locals) %>
    </div>
  </div>
  <div class="col-md-8 text-left">
    <%= render_detail(detail, locals) %>
  </div>
</div>