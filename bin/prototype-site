#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_DIR="$(dirname $SCRIPT_DIR)"
MOUNT_DIR=/mnt/hey-cira
DOCKER_IMG=cybera/hey-cira/ruby

docker run -it --rm \
	-v $PROJECT_DIR:$MOUNT_DIR \
  -p 4567:4567 \
	$DOCKER_IMG \
	bash -c "cd $MOUNT_DIR; prototypes/browser.rb"